<div class="container">
	<div class="jumbotron">
		<img src="/assets/img/burger.jpg" id="juicy">
		<h1> EAT DA BURGER! </h1>
	</div>

	{{!-- burger list before being eaten --}}
	<div class="row">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form class="devour-form">
									<input type="hidden" name="devoured" value={{this.id}} class="burger_id">
									<button class="btn btn-default btn-lg" type="submit"> CRUSH IT! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>


		{{!-- burger list after being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead"> Please select your burger. Enter now and click the submit button below. </p>

		{{!-- section to add burgers --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
		</form>
	</div>
</div>